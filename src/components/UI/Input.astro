---
interface Props {
  label?: string;
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search';
  name?: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  value?: string;
  class?: string;
  [key: string]: any;
}

const { 
  label, 
  type = 'text', 
  name, 
  id, 
  placeholder, 
  required = false, 
  value,
  class: className,
  ...rest 
} = Astro.props;

const inputClasses = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-primary-200 focus:border-primary-500 outline-none transition-all duration-200 hover:border-gray-400";
---

<div class={className}>
  {label && (
    <label for={id || name} class="block text-sm font-medium text-gray-700 mb-2">
      {label} {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <input
    type={type}
    name={name}
    id={id || name}
    placeholder={placeholder}
    required={required}
    value={value}
    class={inputClasses}
    {...rest}
  />
</div>