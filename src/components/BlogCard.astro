---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  tags: string[];
  slug: string;
  readTime: string;
}

const { title, excerpt, date, tags, slug, readTime } = Astro.props;

const tagColors = {
  'Python': 'bg-green-500/20 text-green-400 border-green-500/30',
  'Django': 'bg-emerald-500/20 text-emerald-400 border-emerald-500/30',
  'JavaScript': 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
  'React': 'bg-blue-500/20 text-blue-400 border-blue-500/30',
  'Node.js': 'bg-lime-500/20 text-lime-400 border-lime-500/30',
  'API': 'bg-purple-500/20 text-purple-400 border-purple-500/30',
  'Database': 'bg-orange-500/20 text-orange-400 border-orange-500/30',
  'DevOps': 'bg-red-500/20 text-red-400 border-red-500/30',
};
---

<article class="group relative bg-space-900/50 border border-space-800/50 rounded-xl p-6 hover:bg-space-900/70 transition-all duration-300 hover:border-space-700/50 hover:shadow-lg hover:shadow-blue-500/5">
  <div class="flex items-center justify-between text-sm text-space-400 mb-4">
    <time>{date}</time>
    <span>{readTime}</span>
  </div>
  
  <h3 class="text-xl font-semibold text-space-100 mb-3 group-hover:text-white transition-colors duration-200">
    <a href={`/blog/${slug}`} class="stretched-link">
      {title}
    </a>
  </h3>
  
  <p class="text-space-300 mb-4 line-clamp-3">
    {excerpt}
  </p>
  
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <span 
        class={`px-2 py-1 text-xs rounded-full border ${tagColors[tag] || 'bg-space-700/50 text-space-300 border-space-600/50'}`}
      >
        {tag}
      </span>
    ))}
  </div>
</article>