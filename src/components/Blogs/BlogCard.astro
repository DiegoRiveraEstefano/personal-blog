---
import Category from '../Badges/Category.astro';

interface Props {
  title: string;
  excerpt: string;
  date: string;
  tags: string[];
  slug: string;
  readTime: string;
  author: string;
}

const { title, excerpt, date, tags, slug, readTime, author } = Astro.props;

---

<article class="bg-white rounded-2xl shadow-soft hover:shadow-soft-lg transition-all duration-300 overflow-hidden hover-lift">
    <div class="h-48 gradient-primary"></div>
    <div class="p-6">
        <div class="flex items-center space-x-2 mb-3">
            {tags.map(tag => (
                <Category category={tag} text={tag} />
            ))}
            <span class="text-xs text-gray-500">{readTime}</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2 line-clamp-2">
            {title}
        </h3>
        <p class="text-gray-600 mb-4 line-clamp-3">
            {excerpt}
        </p>
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                <div>
                    <p class="text-sm font-medium text-gray-900">{author}</p>
                    <p class="text-xs text-gray-500">{date}</p>
                </div>
            </div>
            <button class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                <a href={`/blog/${slug}`}>Leer más →</a>
            </button>
        </div>
    </div>
</article>