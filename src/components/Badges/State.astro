---
interface Props {
    state: "published" | "draft" | "scheduled" | "archived";
    text?: string;
}

const { state, text } = Astro.props;

const stateColors = {
    "published": 'bg-green-100 text-green-800',
    "draft": 'bg-yellow-100 text-yellow-800',
    "scheduled": 'bg-red-100 text-red-800',
    "archived": 'bg-blue-100 text-blue-800',
};

---

<span class={`px-3 py-1 ${stateColors[state]} text-sm font-medium rounded-full`}>{text }</span>