---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Layout/Header.astro';
import Footer from '../components/Layout/Footer.astro';
import Input from '../components/UI/Input.astro';
import Textarea from '../components/UI/Textarea.astro';
import Button from '../components/UI/Button.astro';
import Alert from '../components/UI/Alert.astro';
---

<Layout title="Contact - TechBlog" description="Get in touch with us.">
  <Header />
  
  <main class="pt-24 pb-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Contact Us
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Have questions or want to work together? Send us a message!
        </p>
      </div>
      
      <div class="bg-white border border-gray-100 shadow-soft rounded-xl p-8 max-w-2xl mx-auto">
         <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <Input label="Name" name="name" placeholder="John Doe" required />
                <Input label="Email" type="email" name="email" placeholder="john@example.com" required />
            </div>
            
            <Input label="Subject" name="subject" placeholder="Project Inquiry" required />
            
            <Textarea label="Message" name="message" placeholder="Tell us about your project..." rows={5} required />
            
            <div class="pt-2">
                <Button type="submit" variant="primary" class="w-full md:w-auto">
                    Send Message
                </Button>
            </div>
         </form>

         <div class="mt-8">
            <Alert variant="info" title="Note">
                This form is currently a demo. Please email us directly at contact@techblog.dev.
            </Alert>
         </div>
      </div>

    </div>
  </main>
  
  <Footer />
</Layout>