---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Layout/Header.astro";
import Footer from "../components/Layout/Footer.astro";
import BlogCard from '../components/Blogs/BlogCard.astro'; 
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
---

<Layout title="Diego Rivera | Software Engineer & Backend Expert" description="Blog personal de Diego Rivera. Tutoriales profundos y artículos técnicos sobre Python, Django, Arquitectura de Software y desarrollo web moderno.">
  <Header />
  
  <section class="text-center py-24 bg-white border-b border-gray-100 animate-fade-in-up">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-5xl md:text-7xl font-extrabold text-gray-900 mb-8 tracking-tight leading-tight">
            Desarrollo con <br class="md:hidden" />
            <span class="bg-gradient-to-r from-primary-600 to-indigo-600 bg-clip-text text-transparent inline-block pb-2">Propósito y Claridad</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed mb-10">
            Soy <span class="text-gray-900 font-bold">Diego Rivera</span>. Exploro la intersección entre la eficiencia del código y la elegancia de la arquitectura en el ecosistema <span class="text-primary-600 font-semibold">Python</span>.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/blog" class="px-8 py-4 bg-primary-600 text-white font-bold rounded-xl hover:bg-primary-700 transition-all shadow-lg hover:shadow-primary-200 flex items-center justify-center">
                Explorar Artículos
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
            <a href="/about" class="px-8 py-4 border border-gray-200 text-gray-700 font-bold rounded-xl hover:bg-gray-50 transition-all flex items-center justify-center">
                Mi Trayectoria
            </a>
        </div>
    </div>
  </section>
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <section class="mb-16 animate-fade-in-up" style="animation-delay: 0.5s;">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map(post => (
          <BlogCard {...post.data} />
        ))}
      </div>
    </section>
  </main>
  
  <Footer></Footer>
</Layout>
