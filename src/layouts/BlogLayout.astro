---
interface Props {
  title: string;
  description?: string;
  date: string;
  readTime: string;
  tags: string[];
  author?: string;
}

const {
  title,
  description = "A comprehensive guide on modern web development.",
  date,
  readTime,
  tags,
  author = "Tech Blog Author",
} = Astro.props;

const tagColors = {
  Python: "bg-green-500/20 text-green-400 border-green-500/30",
  Django: "bg-emerald-500/20 text-emerald-400 border-emerald-500/30",
  JavaScript: "bg-yellow-500/20 text-yellow-400 border-yellow-500/30",
  React: "bg-blue-500/20 text-blue-400 border-blue-500/30",
  "Node.js": "bg-lime-500/20 text-lime-400 border-lime-500/30",
  API: "bg-purple-500/20 text-purple-400 border-purple-500/30",
  Database: "bg-orange-500/20 text-orange-400 border-orange-500/30",
  DevOps: "bg-red-500/20 text-red-400 border-red-500/30",
  ES2024: "bg-yellow-500/20 text-yellow-400 border-yellow-500/30",
  Performance: "bg-pink-500/20 text-pink-400 border-pink-500/30",
  WebSockets: "bg-indigo-500/20 text-indigo-400 border-indigo-500/30",
  "Real-time": "bg-cyan-500/20 text-cyan-400 border-cyan-500/30",
  Docker: "bg-blue-600/20 text-blue-300 border-blue-600/30",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <title>{title} - TechBlog</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-space-950 text-space-100 min-h-screen">
    <header
      class="fixed top-0 left-0 right-0 z-50 bg-space-950/80 backdrop-blur-md border-b border-space-800/50"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a
              href="/"
              class="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent"
            >
              TechBlog
            </a>
          </div>

          <nav class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-8">
              <a
                href="/"
                class="text-space-300 hover:text-white transition-colors duration-200 px-3 py-2 rounded-md text-sm font-medium"
              >
                Home
              </a>
              <a
                href="/blog"
                class="text-space-300 hover:text-white transition-colors duration-200 px-3 py-2 rounded-md text-sm font-medium"
              >
                Blog
              </a>
              <a
                href="/about"
                class="text-space-300 hover:text-white transition-colors duration-200 px-3 py-2 rounded-md text-sm font-medium"
              >
                About
              </a>
            </div>
          </nav>

          <div class="md:hidden">
            <button
              class="text-space-300 hover:text-white focus:outline-none focus:text-white"
            >
              <svg
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </header>

    <main class="pt-24 pb-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <article class="prose prose-invert prose-lg max-w-none">
          <header class="mb-12 not-prose">
            <div class="flex items-center gap-2 text-sm text-space-400 mb-6">
              <a
                href="/blog"
                class="hover:text-space-300 transition-colors duration-200 flex items-center gap-1"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Blog
              </a>
            </div>

            <h1
              class="text-4xl md:text-5xl lg:text-6xl font-bold text-space-100 mb-6 leading-tight"
            >
              {title}
            </h1>

            <div
              class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8"
            >
              <div class="flex items-center gap-4 text-sm text-space-400">
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <time>{date}</time>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>{readTime}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  <span>{author}</span>
                </div>
              </div>
            </div>

            <div class="flex flex-wrap gap-2 mb-8">
              {
                tags.map((tag) => (
                  <span
                    class={`px-3 py-1 text-sm rounded-full border ${tagColors[tag] || "bg-space-700/50 text-space-300 border-space-600/50"}`}
                  >
                    {tag}
                  </span>
                ))
              }
            </div>

            <div
              class="h-px bg-gradient-to-r from-transparent via-space-700 to-transparent mb-8"
            >
            </div>
          </header>

          <div class="blog-content">
            <slot />
          </div>

          <footer class="mt-16 pt-8 border-t border-space-800/50 not-prose">
            <div
              class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
            >
              <div class="text-sm text-space-400">
                Published on {date} by {author}
              </div>
              <div class="flex items-center gap-4">
                <span class="text-sm text-space-400">Share this article:</span>
                <div class="flex gap-2">
                  <a
                    href="#"
                    class="p-2 rounded-lg bg-space-800/50 hover:bg-space-700/50 transition-colors duration-200"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                      ></path>
                    </svg>
                  </a>
                  <a
                    href="#"
                    class="p-2 rounded-lg bg-space-800/50 hover:bg-space-700/50 transition-colors duration-200"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                      ></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </footer>
        </article>
      </div>
    </main>

    <footer
      class="border-t border-space-800/50 bg-space-950/80 backdrop-blur-md"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-space-400">
          <p>&copy; 2024 TechBlog. Built with Astro and TailwindCSS.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .blog-content {
    @apply text-space-200 leading-relaxed;
  }

  .blog-content h2 {
    @apply text-3xl font-bold text-space-100 mt-12 mb-6 border-b border-space-800/30 pb-3;
  }

  .blog-content h3 {
    @apply text-2xl font-semibold text-space-100 mt-10 mb-4;
  }

  .blog-content h4 {
    @apply text-xl font-semibold text-space-200 mt-8 mb-3;
  }

  .blog-content p {
    @apply mb-6 text-space-300 text-lg leading-relaxed;
  }

  .blog-content ul,
  .blog-content ol {
    @apply mb-6 pl-6 text-space-300;
  }

  .blog-content li {
    @apply mb-2;
  }

  .blog-content blockquote {
    @apply border-l-4 border-blue-500/50 pl-6 py-2 my-6 bg-space-900/30 rounded-r-lg italic text-space-300;
  }

  .blog-content pre {
    @apply bg-space-900/70 border border-space-800/50 rounded-xl p-6 overflow-x-auto mb-6 text-sm;
  }

  .blog-content code {
    @apply font-mono text-sm;
  }

  .blog-content pre code {
    @apply text-space-200 bg-transparent p-0;
  }

  .blog-content :not(pre) > code {
    @apply bg-space-800/50 text-green-400 px-2 py-1 rounded text-sm;
  }

  .blog-content a {
    @apply text-blue-400 hover:text-blue-300 transition-colors duration-200 underline decoration-blue-400/30 hover:decoration-blue-300/50;
  }

  .blog-content img {
    @apply rounded-lg shadow-lg my-8 w-full;
  }

  .blog-content table {
    @apply w-full border-collapse border border-space-700 rounded-lg overflow-hidden my-6;
  }

  .blog-content th,
  .blog-content td {
    @apply border border-space-700 px-4 py-2 text-left;
  }

  .blog-content th {
    @apply bg-space-800/50 font-semibold text-space-100;
  }

  .blog-content td {
    @apply text-space-300;
  }
</style>
