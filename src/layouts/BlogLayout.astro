---
import "../styles/global.css";
import "../styles/viewTransition.css";
import Header from "../components/Layout/Header.astro";
import Footer from "../components/Layout/Footer.astro";
import Layout from "./Layout.astro";
import Category from "../components/Badges/Category.astro";

interface Props {
  title: string;
  description?: string;
  date: Date | string;
  readTime: string;
  tags: string[];
  author?: string;
  image?: string;
}

const {
  title,
  description,
  date,
  readTime,
  tags,
  image,
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={title} description={description} image={image}>
  <Header />
  <main class="pt-32 pb-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <header class="mb-12">
        <div class="flex flex-wrap gap-2 mb-6">
          {tags.map(tag => <Category category={tag} />)}
        </div>
        
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6 leading-tight">
          {title}
        </h1>
        
        <div class="flex items-center text-gray-500 text-sm font-medium">
          <time datetime={new Date(date).toISOString()}>{formattedDate}</time>
          <span class="mx-3 text-gray-300">â€¢</span>
          <span>{readTime}</span>
        </div>
      </header>

      <div class="prose prose-lg prose-indigo max-w-none prose-headings:font-bold prose-a:text-primary-600">
        <slot />
      </div>

      <div class="mt-16 pt-8 border-t border-gray-100">
        <a href="/blog" class="inline-flex items-center text-primary-600 font-bold hover:text-primary-700 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver al Blog
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

